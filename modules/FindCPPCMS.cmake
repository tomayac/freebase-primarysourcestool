FIND_PATH( LIBCPPCMS_INCLUDE_DIR cppcms/application.h)
FIND_LIBRARY( LIBCPPCMS_LIBRARY NAMES cppcms)

IF( LIBCPPCMS_INCLUDE_DIR AND LIBCPPCMS_LIBRARY )
   SET( LIBCPPCMS_FOUND TRUE )
ENDIF( LIBCPPCMS_INCLUDE_DIR AND LIBCPPCMS_LIBRARY )

IF( LIBCPPCMS_FOUND )
   IF( NOT CPPCMS_FIND_QUIETLY )
      MESSAGE( STATUS "Found libcppcms: ${LIBCPPCMS_LIBRARY}" )
   ENDIF( NOT CPPCMS_FIND_QUIETLY )
ELSE( LIBCPPCMS_FOUND )
   IF( CPPCMS_FIND_REQUIRED )
      MESSAGE( FATAL_ERROR "Could not find libcppcms" )
   ENDIF( CPPCMS_FIND_REQUIRED )
ENDIF( LIBCPPCMS_FOUND )